<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.barunsw.ojt.yhkim.day07.AddressBookDao">
  <select id="selectAddressBook" parameterType="com.barunsw.ojt.yhkim.day07.AddressBook" 
  	resultType="com.barunsw.ojt.yhkim.day07.AddressBook">
    SELECT * FROM TB_ADDRESS
  </select>
  
  <insert id="insertAddressBook" parameterType="com.barunsw.ojt.yhkim.day07.AddressBook">
  	INSERT INTO TB_ADDRESS
  	(name, birthday, gender, phoneNumber, address)
  	VALUES (#{name}, #{birthday}, #{gender}, #{phoneNumber}, #{address}) 
  </insert>
  
  <update id="updateAddressBook" parameterType="com.barunsw.ojt.yhkim.day07.AddressBook">
  	UPDATE TB_ADDRESS
  	SET NAME=#{name}, BIRTHDAY=#{birthday}, GENDER=#{gender}, PHONENUMBER=#{phoneNumber}, ADDRESS=#{address}
  	WHERE SEQ=#{seq}
  </update>
  
  <delete id="deleteAddressBook" parameterType="com.barunsw.ojt.yhkim.day07.AddressBook">
  	DELETE FROM TB_ADDRESS
  	WHERE SEQ=#{seq}
  </delete>
  
  <select id="selectAddressByName" parameterType="com.barunsw.ojt.yhkim.day07.AddressBook" 
  	resultType="com.barunsw.ojt.yhkim.day07.AddressBook">
  	SELECT * FROM TB_ADDRESS
  	<where>
  		<if test="name!=null">
  			NAME LIKE CONCAT('%',#{name},'%')
  		</if>	
  	</where>
  </select>
  
  <select id="selectAddressBySeq" parameterType="com.barunsw.ojt.yhkim.day07.AddressBook"
  	resultType="com.barunsw.ojt.yhkim.day07.AddressBook">
  	SELECT * FROM TB_ADDRESS
  	<where>
  		<if test="seq!=null">
  			SEQ=#{seq}
  		</if>
  	</where>
  </select>
</mapper>